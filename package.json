{
  "name": "@irim/cli-base",
  "version": "1.1.0",
  "description": "Base Module for Command Line Tools",
  "repository": {
    "type": "git",
    "url": "git@github.com:huarse/cli-base.git"
  },
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts ./src",
    "build:lib": "tsc --outDir lib --module CommonJS --target ES2018",
    "build:esm": "tsc --outDir esm --module ES6 --target ES2018",
    "build": "npm run build:lib && npm run build:esm",
    "prebuild": "npm run lint && npm run clear",
    "dev": "tsc --outDir lib --module CommonJS --target ES2018 --watch",
    "clear": "rm -rf lib esm types",
    "test": "jest --config=config/jest.config.js",
    "test:watch": "jest --config=config/jest.config.js --watch",
    "prepublishOnly": "npm run build"
  },
  "author": {
    "name": "CAIHUAZHI",
    "email": "huarse@gmail.com"
  },
  "maintainers": [
    {
      "name": "CAIHUAZHI",
      "email": "huarse@gmail.com"
    }
  ],
  "license": "BSD-3-Clause",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "dateformat": "^3.0.3",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "ora": "^5.1.0",
    "properties": "^1.2.1",
    "single-line-log": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "~11.0.0",
    "@commitlint/config-conventional": "~11.0.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.2",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "~4.4.1",
    "@typescript-eslint/parser": "~4.4.1",
    "eslint": "~7.11.0",
    "husky": "~4.3.0",
    "jest": "^26.5.3",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {},
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "cli-base"
  ],
  "files": [
    "lib",
    "esm",
    "dist",
    "types"
  ]
}
